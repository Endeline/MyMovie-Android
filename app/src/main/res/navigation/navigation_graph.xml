<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_graph.xml"
    app:startDestination="@id/nowPlaying">

    <fragment
        android:id="@+id/nowPlaying"
        android:name="com.endeline.mymovie.ui.now.NowPlayingFragment"
        android:label="NowPlayingFragment">
        <action
            android:id="@+id/toSearch"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/toDetails"
            app:destination="@id/detailsFragment">
            <argument
                android:name="movie_id"
                android:defaultValue="-1"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/popular"
        android:name="com.endeline.mymovie.ui.popular.PopularFragment"
        android:label="PopularFragment">
        <action
            android:id="@+id/toSearch"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/toDetails"
            app:destination="@id/detailsFragment">
            <argument
                android:name="movie_id"
                android:defaultValue="-1"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/upcoming"
        android:name="com.endeline.mymovie.ui.upcoming.UpcomingFragment"
        android:label="UpcomingFragment">
        <action
            android:id="@+id/toSearch"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/toDetails"
            app:destination="@id/detailsFragment">
            <argument
                android:name="movie_id"
                android:defaultValue="-1"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/topRated"
        android:name="com.endeline.mymovie.ui.top.TopRatedFragment"
        android:label="TopRatedFragment">
        <action
            android:id="@+id/toSearch"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/toDetails"
            app:destination="@id/detailsFragment">
            <argument
                android:name="movie_id"
                android:defaultValue="-1"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.endeline.mymovie.ui.search.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/toDetails"
            app:destination="@id/detailsFragment">
            <argument
                android:name="movie_id"
                android:defaultValue="-1"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.endeline.mymovie.ui.details.DetailsFragment"
        android:label="DetailsFragment">
        <action
            android:id="@+id/toDetails"
            app:destination="@id/detailsFragment">
            <argument
                android:name="movie_id"
                android:defaultValue="-1"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/toVideo"
            app:destination="@id/videoFragment">
            <argument
                android:name="movie_link"
                app:argType="string" />
            <argument
                android:name="site"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/videoFragment"
        android:name="com.endeline.mymovie.ui.video.VideoFragment"
        android:label="VideoFragment" />
</navigation>
